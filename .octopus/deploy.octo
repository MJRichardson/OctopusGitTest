schema_version = 1.0
process {
  inline_script_action "Echo Hello World" {
    run_on_server = true
    syntax = "Bash"
    body = <<SCRIPT
      echo "Hello World!"
    SCRIPT
    environments = []
  }
  inline_script_action "Just another script step" {
    run_on_server = false
    target_roles = ["instanceworker"]
    syntax = "PowerShell"
    body = <<SCRIPT
      Write-Host "boo"
    SCRIPT
    environments = []
  }
}
