schema_version = 1.0
process {
action "Approval" {
    action_type = "Octopus.Manual"
    properties {
      "Octopus.Action.Manual.BlockConcurrentDeployments" = "False"
      "Octopus.Action.Manual.Instructions" = "Approve this release"
      "Octopus.Action.Manual.ResponsibleTeamIds" = "teams-everyone"
    }
  inline_script_action "Hello World" {
    run_on_server = true
    syntax = "PowerShell"
    body = <<SCRIPT
      Write-Host "Hello World!"
    SCRIPT
    environments = []
  }
  }
}
